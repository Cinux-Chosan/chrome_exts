{
  "manifest_version": 2,

  "name": "ajaxMonitor",
  "description": "4 huangqin",
  "version": "1.0",
  "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },
  "content_scripts": [
      {
        "matches": ["*://*.meituan.com/*", "*://*.meituan.net/*"],
        "run_at": "document_start",
        "js": ["monitor.js"]
      }
    ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "p.html",
    "default_title": "ajaxMonitor-v1"
  },
  "permissions": [
    "webRequest"
  ]
}
